// Based on https://github.com/amq-script-project/AMQ-Scripts/raw/master/gameplay/amqSoundEffects.user.js

if (!window.GameChat) return;
function settings_changed() {
    var som = new Audio("https://files.catbox.moe/khbiht.mp3")
    som.play()
}


function dm() {
    var snd = new Audio("https://files.catbox.moe/xu2kof.mp3")
    snd.volume = 0.1
    snd.play();
}

function game_start(){
   var start = new Audio("https://files.catbox.moe/4h18g6.mp3")
   start.volume = 1
   start.play();
}

function invite(){
   var invite = new Audio("https://files.catbox.moe/8bkbvx.mp3")
   invite.play();
}
function return_lobby(){
    var lobby = new Audio("https://files.catbox.moe/oi1rij.mp3")
    lobby.volume= 2
    lobby.play();
}
function unpause(){
     var unp = new Audio("https://www.myinstants.com/media/sounds/myaudio_10.mp3")
     unp.play()
}

function mention(){
    var men = new Audio("https://files.catbox.moe/bpvzwm.mp3");
    men.play();
}

new Listener("quiz unpause triggered", (payload) =>{ unpause()}).bindListener()
new Listener("return lobby vote start", (payload) =>{ return_lobby()}).bindListener()
new Listener("Room Settings Changed", (changes) => { settings_changed()}).bindListener()
new Listener("chat message", function (payload) { dm() }).bindListener()
new Listener("Game Starting", function (payload) { game_start() }).bindListener()
new Listener("game invite", function(payload) { invite()}).bindListener()
